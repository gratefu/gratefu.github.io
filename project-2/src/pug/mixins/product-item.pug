mixin product-item(img)
	.product-item.product-item--product-line
		.product-item__inner
			.product-item__header
				a(href="javascript:void(0);").product-item__img
					img(src=img, alt="")
			.product-item__body
				.product-item__descr
					a(href="javascript:void(0);").product-item__type Планшет
					a(href="javascript:void(0);").product-item__title Планшет Huawei Mediapad M3 Lite 10 32Gb (сірий)
					.product-item__rating
						+svg("star").active
						+svg("star")
						+svg("star")
						+svg("star")
						+svg("star")
				.product-item__price-wrap
					span.product-item__price 10 000 грн.
					button.product-item__basket
						+svg("basket")
	